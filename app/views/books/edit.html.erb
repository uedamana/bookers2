<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div id="error_explanation">
        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this book from being saved:
            <ul><% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
        <div class="form-group">
          <%= f.label :Title, class: "book_title" %>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion, class: "book_opinion" %>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
       |
      <%= link_to "Back", '/books' %>
    </div>
  </div>
</div>